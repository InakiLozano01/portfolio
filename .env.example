# Example environment variables
# Copy this file to env.local or env.production and update values

MONGODB_URI=mongodb://localhost:27017/portfolio
REDIS_URL=redis://localhost:6379

NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret

NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-secure-password

# Skip DB/Redis connections during build (useful for CI)
SKIP_REDIS_DURING_BUILD=true
SKIP_DB_DURING_BUILD=true

# API key for Google AI Studio moderation
GOOGLE_AI_API_KEY=your-google-ai-key

